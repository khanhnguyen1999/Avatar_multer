extends ../layouts/common.pug
block content
        button(type="button",class="btn btn-primary float-right",method="GET",action="/auth/login") Logout
        h1 
            span.mr-3 User
            a.btn.btn-primary(href='/users/create') Create
        .d-flex.alight-items-center
            
            form.ml-auto(action="/users/search",method="GET",class="form-group d-flex p-1")
                input(type="text",name="q",class="form-control")
                button(class="btn btn-danger ml-1") search
        table.table
            tr
                th Avatar
                th Name
                th Phone
                th Action
            each user in users
                tr
                    td
                        img(src=user.avatar)
                    td=user.name
                    td=user.phone
                    td
                        a.btn.btn-light(href="/users/"+user.id) View